//输入若干整数，直到输入0为止，统计其中正整数的个数。
#include <stdio.h>
int main()
{
    
    int count = 0, num;
    printf("请输入数字，按回车继续，输入0退出\n");
    scanf("%d", &num);
    while(num != 0)
    {
        
        if (num > 0)
        {
            count ++;   //设置数字为正数数计数器加一，其他同上题
        }
        scanf("%d", &num);
    }
    
    printf("正整数和为%d(不包含最后的0)", count);
    return 0;
}
