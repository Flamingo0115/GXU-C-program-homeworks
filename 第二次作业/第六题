//输入n, 求1-n之间的奇数和与偶数和。
#include <stdio.h>
int main()
{
    
    int odd_sum = 0, even_sum = 0, n;
    printf("请输入n\n");
    scanf("%d", &n);
    while(n != 0)
    {
        
        if (n % 2 == 0)
        {
            even_sum = even_sum + n;
        }
        else
        {
            odd_sum = odd_sum + n;
        }
        n = n - 1;
    }
    
    printf("在1-n中，偶数和为%d,奇数和为%d。", even_sum, odd_sum);
    return 0;
}
